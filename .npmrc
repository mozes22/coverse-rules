fetch-retries=3
fetch-timeout=120000
ignore-scripts=neverBuiltDependencies
strict-peer-dependencies=true
engine-strict=true
auto-install-peers=true
# useful to totally avoid lockfile merge conflicts and solve it later
# merging git branch lockfiles using: `pnpm install --merge-git-branch-lockfiles`
# ref: https://pnpm.io/git_branch_lockfiles
git-branch-lockfile=true
@${CI_PROJECT_ROOT_NAMESPACE}:registry=https:${CI_API_V4_URL}/packages/npm/
${CI_API_V4_URL}/packages/npm/:_authToken=${GITLAB_TOKEN}
${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/npm/:_authToken=${GITLAB_TOKEN}
