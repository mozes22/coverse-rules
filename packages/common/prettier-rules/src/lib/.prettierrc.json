{
  "semi": true,
  "tabWidth": 2,
  "endOfLine": "lf",
  "singleQuote": false,
  "bracketSpacing": true,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 100,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.component.ts",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 100,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.module.ts",
      "excludeFiles": ["app.module.ts"],
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 100,
        "singleAttributePerLine": true
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "bracketSameLine": true,
        "htmlWhitespaceSensitivity": "ignore",
        "tabWidth": 2,
        "parser": "html",
        "singleQuote": false,
        "trailingComma": "none",
        "singleAttributePerLine": true,
        "printWidth": 100
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "parser": "scss",
        "singleQuote": false
      }
    },
    {
      "files": "*.mjs",
      "options": {
        "printWidth": 100,
        "singleQuote": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "flow",
        "printWidth": 100,
        "singleQuote": false
      }
    }
  ]
}
