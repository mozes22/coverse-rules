{
  "semi": true,
  "tabWidth": 4,
  "endOfLine": "auto",
  "singleQuote": true,
  "bracketSpacing": true,
  "useTabs": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "printWidth": 150,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.component.ts",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "printWidth": 150,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.module.ts",
      "excludeFiles": ["app.module.ts"],
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "printWidth": 20,
        "singleAttributePerLine": true
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "bracketSameLine": true,
        "htmlWhitespaceSensitivity": "ignore",
        "tabWidth": 2,
        "parser": "html",
        "singleQuote": true,
        "trailingComma": "none",
        "singleAttributePerLine": true,
        "printWidth": 150
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "parser": "scss",
        "singleQuote": false
      }
    },
    {
      "files": "*.mjs",
      "options": {
        "printWidth": 150
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "flow",
        "printWidth": 150
      }
    }
  ]
}
