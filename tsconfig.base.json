{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@coverse-tech/angular-eslint": [
        "packages/angular/eslint-rules/src/index.ts"
      ],
      "@coverse-tech/prettier": ["packages/prettier-rules/src/index.ts"],
      "@coverse-tech/stylelint": [
        "packages/common/stylelint-rules/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
